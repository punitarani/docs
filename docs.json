{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Peepal",
  "colors": {
    "primary": "#22C55E",
    "light": "#86EFAC",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "logo": {
    "light": "/logo/peepal-light.png",
    "dark": "/logo/peepal.png"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://peepal.dev/dashboard"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "authentication", "projects"]
          },
          {
            "group": "Core concepts",
            "pages": [
              "concepts/jobs",
              "concepts/claims",
              "concepts/reports",
              "concepts/templates",
              "concepts/webhooks"
            ]
          },
          {
            "group": "Operations",
            "pages": ["guides/pagination-idempotency", "guides/errors"]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Jobs",
            "pages": [
              "api-reference/jobs/create",
              "api-reference/jobs/list",
              "api-reference/jobs/get",
              "api-reference/jobs/cancel",
              "api-reference/jobs/report",
              "api-reference/jobs/sources"
            ]
          },
          {
            "group": "Templates",
            "pages": [
              "api-reference/templates/create",
              "api-reference/templates/list",
              "api-reference/templates/get",
              "api-reference/templates/deprecate"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/create-endpoint",
              "api-reference/webhooks/list-endpoints",
              "api-reference/webhooks/get-endpoint",
              "api-reference/webhooks/update-endpoint",
              "api-reference/webhooks/rotate-secret",
              "api-reference/webhooks/list-deliveries",
              "api-reference/webhooks/get-delivery"
            ]
          },
          {
            "group": "Health",
            "pages": ["api-reference/health"]
          }
        ]
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "api": {
    "baseUrl": "https://api.peepal.dev",
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "auth": {
      "method": "key",
      "name": "x-api-key"
    }
  }
}
